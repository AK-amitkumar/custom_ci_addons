<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="sale_letter_summary_remain">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="report.internal_layout">
                <div class="page">
                    <div class="row">
                        <h1 align="center">Sale Letter Summary (Remain)</h1><br/>
                            <h4>From <span t-esc="doc.date_from"/> to <span t-esc="doc.date_to"/> </h4>
                            <table class="table table-condensed" style="font-size:10px">
                                <thead>
                                    <t t-set="total" t-value="0"/>
                                    <t t-set="issued" t-value="0"/>
                                    <tr style="background:#ccc;">
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">Serial No.</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">DO. No.</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">DO. Date</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">Total Quantity</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">Issued Letter</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; ">Balance Letter</td>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <tr t-foreach="doc.sale_letter_summary()" t-as="l">
                                        <td style="border: 1px solid black; padding:5px; text-align:center;">
                                            <span t-esc="l_index+1"/>
                                        </td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;">
                                            <span t-esc="l['do_number']"/>
                                        </td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;">
                                            <span t-esc="l['do_date']"/>
                                        </td>
                                         <td style="border: 1px solid black; padding:5px; text-align:center;">
                                             <span t-esc="l['total']"/>
                                             <t t-set="total" t-value="total+l['total']"/>
                                        </td>
                                         <td style="border: 1px solid black; padding:5px; text-align:center;">
                                            <span t-esc="l['issued']"/>
                                             <t t-set="issued" t-value="issued+l['issued']"/>
                                        </td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;">
                                            <span t-esc="l['balance']"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;font-weight:bold" colspan="3">Total</td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;font-weight:bold">
                                            <span t-esc="total"/>
                                        </td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;font-weight:bold" >
                                            <span t-esc="issued"/>
                                        </td>
                                        <td style="border: 1px solid black; padding:5px; text-align:center;font-weight:bold" >
                                            <span t-esc="total-issued"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>