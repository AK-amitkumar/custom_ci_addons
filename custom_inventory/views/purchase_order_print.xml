<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="purchase_order_print">
            <t t-call='report.html_container'>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-xs-6">
                                  <strong style="font-size:16px">Company's Information:</strong><br/>
                                  <strong><span t-esc="'%s' %res_company.name"/></strong><br/>
                                  <span t-esc="'%s' %res_company.street"/><br/>
                                  <span t-esc="'%s' %res_company.street2"/>, <span t-esc="'%s' %res_company.city" style="margin-left:5px;"/><br/>
                                  <span t-esc="'%s' %res_company.country_id.name"/><span t-esc="'%s' %res_company.zip" style="margin-left:5px;"/><br/>
                                  Fax<span t-esc="'%s' %res_company.fax" style="margin-left:5px;"/><br/>
                                  <span t-esc="'%s' %res_company.email"/><br/>
                                 PH<span t-esc="'%s' %res_company.phone" style="margin-left:5px;"/><br/>
                                  <span t-esc="'%s' %res_company.website"/><br/>
                                <span>NTN:17-12-8708-007-73</span>
                            </div>
                            <div class="col-xs-5 col-xs-offset-1">
                                <strong style="font-size:16px">Supplier's Information:</strong><br/>
                                <span t-field="o.partner_id.name"/><br/>
                                <span t-if="o.partner_id.street">
                                    <span t-field="o.partner_id.street"/><br/>
                                </span>
                                <span t-if="o.partner_id.street2">
                                    <span t-field="o.partner_id.street2"/><br/>
                                </span>
                                <span t-if="o.partner_id.city">
                                    <span t-field="o.partner_id.city"/><br/>
                                </span>
                                <span t-if="o.partner_id.nic">
                                    NIC <span t-field="o.partner_id.nic"/><br/>
                                </span>
                                <span t-if="o.partner_id.ntn">
                                    NTN<span t-field="o.partner_id.ntn"/><br/>
                                </span>
                                <span t-if="o.partner_id.strn">
                                    STRN<span t-field="o.partner_id.strn"/><br/>
                                </span>
                                <span t-if="o.partner_id.gst">
                                    GST<span t-field="o.partner_id.gst"/><br/>
                                </span>
                            </div>
                        </div>
                        <h2 t-if="o.state != 'draft'">Purchase Order
                            <span t-field="o.name"/>
                        </h2>
                        <h2 t-if="o.state == 'draft'">Request for Quotation NÂ°
                            <span t-field="o.name"/>
                        </h2>
                        <div class="row mt32 mb32">
                            <div t-if="o.name" class="col-xs-3">
                                <strong>Our Order Reference:</strong>
                                <p t-field="o.name"/>
                            </div>
                            <div t-if="o.partner_ref" class="col-xs-3">
                                <strong>Your Order Reference</strong>
                                <p t-field="o.partner_ref"/>
                            </div>
                            <div t-if="o.date_order" class="col-xs-3">
                                <strong>Order Date:</strong>
                                <p t-field="o.date_order"/>
                            </div>
                            <div t-if="o.validator" class="col-xs-3">
                                <strong>Validated By:</strong>
                                <p t-field="o.validator"/>
                            </div>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>
                                        <strong>Description</strong>
                                    </th>
                                    <th>
                                        <strong>Taxes</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Date Req.</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Qty</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Unit Price</strong>
                                    </th>
                                    <th class="text-right">
                                        <strong>Net Price</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.date_planned"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal"
                                              t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total Without Taxes</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"
                                                  t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Taxes</td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax"
                                                  t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"
                                                  t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 pull-left">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td>
                                            <strong>Tax</strong>
                                        </td>
                                        <td class="text-right">
                                           <strong>Amount</strong>
                                        </td>
                                    </tr>
                                    <tr t-foreach="o.tax_line" t-as="line">
                                        <td><span t-esc="line.name"/></td>
                                        <td class="text-right"><span t-esc="line.amount"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <p t-field="o.notes"/>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>