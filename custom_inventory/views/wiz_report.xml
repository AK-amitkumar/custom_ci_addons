<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="wiz_report">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="report.internal_layout">
                <div class="page">
                    <div class="row">
                        <h1 align="center">Collection Report</h1><br/>
                        <h6>From <span t-esc="doc.date_from"/> to <span t-esc="doc.date_to"/> </h6>
                        <table class="table table-condensed" style="font-size:10px">
                        <thead>
                            <tr style="background:royalblue;">
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Serial No.</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Entry Date</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Entry/Voucher No.</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Debit Account Name</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Credit Account Name</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Entry Amount</td>
                                <td style="border: 1px solid black; padding:5px; text-align:center; font-weight:bolder; color:white;">Entry Particulars</td>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="doc.collection_report()" t-as="l">
                                 <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l_index+1"/>
                                 </td>
                                 <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['date']"/>
                                 </td>
                                 <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['entry']"/>
                                 </td>
                                 <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['amount']"/>
                                 </td>
                                <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['account_head']"/>
                                 </td>
                                <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['customer']"/>
                                 </td>
                                <td style="border: 1px solid black; padding:5px; text-align:center;">
                                     <span t-esc="l['particulars']"/>
                                 </td>
                             </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>