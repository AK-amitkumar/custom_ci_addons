<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="certificate_print">
           <t t-call='report.html_container'>
               <t t-foreach="docs" t-as="certificate">
                   <t>
                       <t t-if="(certificate.counter!=0 and certificate.status=='Approved' and certificate.certificate_lock==False) or (certificate.counter==0 and certificate.status=='draft' and certificate.certificate_lock==False)">
                            <div class="page">
                               <span t-esc="certificate.certificate_serial" style="float:right;margin-top:100px;margin-right:60px;"/><br/>
                               <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', certificate.generate_qr_code(), 100, 100)" style="float:right;margin-top:100px;margin-right:-20px;"/>
                                <t t-if="certificate.check_issuance()==1">
                                    <div style="width:10px; height:10px; background:black; border-radius:100px;margin-top:100px;margin-left:50px;float:left">

                                    </div>
                                    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                    <h4>
                                        <strong><span style="margin-left:600px">US 70CC</span></strong>
                                    </h4>
                                    <h4><strong><span t-esc="certificate.engine_number" style="margin-left:200px"/>
                                   <span t-esc="certificate.chassis_number" style="margin-left:150px"/></strong></h4><br/>
                                   <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                   <br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                   <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', certificate.generate_qr_code(), 100, 100)" style="float:left;margin-left:130px;height:70px;width:70px;"/>
                                   <span t-esc="certificate.id" style="float:right;margin-right:60px;"/><br/><br/><br/><br/>
                                   <span t-esc="certificate.partner_id.name" style="float:left;font-size:16px;font-weight:bold;margin-left:110px;"/>
                                   <span t-esc="certificate.partner_id.city" style="float:left;font-size:16px;font-weight:bold;margin-left:300px;"/><br/><br/>
                                   <span t-esc="certificate.model" style="float:left;font-size:16px;font-weight:bold;margin-left:150px;"/>
                                   <span style="float:left;font-size:16px;font-weight:bold;margin-left:180px;">US 70CC</span>
                                   <span t-esc="certificate.color" style="font-size:16px;font-weight:bold;margin-left:180px;"/><br/><br/>
                                   <span t-esc="certificate.engine_number" style="font-size:16px;font-weight:bold;margin-left:120px"/>
                                   <span t-esc="certificate.chassis_number" style="font-size:16px;font-weight:bold;margin-left:150px"/>
                                    <span t-esc="certificate.inc_in_counter()"/>
                               </t>
                               <t t-if="certificate.check_issuance()==0">
                                   <br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                   <h4><strong><span t-esc="certificate.engine_number" style="margin-left:200px"/>
                                   <span t-esc="certificate.chassis_number" style="margin-left:150px"/></strong></h4><br/>
                                   <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                   <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                   <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', certificate.generate_qr_code(), 100, 100)" style="float:left;margin-left:130px;height:70px;width:70px;"/>
                                   <span t-esc="certificate.certificate_serial" style="float:right;margin-right:60px;"/><br/><br/><br/><br/>
                                   <span t-esc="certificate.partner_id.name" style="float:left;font-size:16px;font-weight:bold;margin-left:110px;"/>
                                   <span t-esc="certificate.partner_id.city" style="float:left;font-size:16px;font-weight:bold;margin-left:300px;"/><br/><br/>
                                   <span t-esc="certificate.model" style="float:left;font-size:16px;font-weight:bold;margin-left:150px;"/>
                                   <span style="float:left;font-size:16px;font-weight:bold;margin-left:200px;">US 70CC</span>
                                   <span t-esc="certificate.color" style="font-size:16px;font-weight:bold;margin-left:200px;"/><br/><br/>
                                   <span t-esc="certificate.engine_number" style="font-size:16px;font-weight:bold;margin-left:120px"/>
                                   <span t-esc="certificate.chassis_number" style="font-size:16px;font-weight:bold;margin-left:150px"/>
                                   <span t-esc="certificate.issuance()"/>
                                    <span t-esc="certificate.inc_in_counter()"/>
                               </t>
                           </div>
                       </t>
                   </t>
               </t>
           </t>
        </template>
    </data>
</openerp>